     <%= f.hidden_field(:user_id, :value => current_user.id) %> <!-- CAMBIAR CUANDO TENGAMOS USUARIOS -->
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
