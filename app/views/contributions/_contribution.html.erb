<li id="contribution-<%= contribution.id %>">
  
  <span>
    <%= contribution.titulo %>
  </span>
  
  <span>
    (<%= contribution.url %>)
  </span>
  
  <span>
    <%= contribution.puntos %>
  </span>
  
  <br>
  
  <span>
    points by
  </span>

  <span>
     <%= link_to contribution.user.name, contribution.user %>
  </span>
  
  <span>
    <%= link_to time_ago_in_words(contribution.created_at), contribution %>
  </span>
  
  <span>
    <%= link_to "#{contribution.comments.size + contribution.replies.size} comments", contribution %>
  </span>
  <span>
    <%= link_to 'Destroy', contribution, method: :delete, data: { confirm: 'Are you sure?' } %>
  </span>
</li>
