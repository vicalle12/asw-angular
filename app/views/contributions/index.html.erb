<p id="notice"><%= notice %></p>

<h1>Listing Contributions</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>User</th>
      <th>Url</th>
      <th>Puntos</th>
      <th>Comentarios</th>
      <th>Tipo</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contributions.each do |contribution| %>
      <tr>
        <td><%= contribution.titulo %></td>
        <td><%= contribution.user_id %></td>
        <td><%= contribution.url %></td>
        <td><%= contribution.puntos %></td>
        <td><%= contribution.comentarios %></td>
        <td><%= contribution.tipo %></td>
        <td><%= contribution.text %></td>
        <td><%= link_to 'Show', contribution %></td>
        <td><%= link_to 'Edit', edit_contribution_path(contribution) %></td>
        <td><%= link_to 'Destroy', contribution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contribution', new_contribution_path %>
